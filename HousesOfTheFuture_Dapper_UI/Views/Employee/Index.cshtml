@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4" style="color: red;">Personel Listesi</h6> <!-- Başlık kırmızı -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="color: red;">#</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Personel Adı</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Unvan</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Durum</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Sil</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Güncelle</th> <!-- Başlık kırmızı -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row" style="color: darkblue;">@count</th> <!-- İçerik lacivert -->
                                    <td style="color: navy;">@item.Name</td> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.Title</td> <!-- Unvanı lacivert yap -->
                                    <td style="color: darkblue;">@item.Status</td> <!-- Durumu lacivert yap -->
                                    <td><a href="/Employee/DeleteEmployee/@item.EmployeeId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/UpdateEmployee/@item.EmployeeId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Employee/CreateEmployee/" class="btn btn-outline-info">Yeni Personel Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
