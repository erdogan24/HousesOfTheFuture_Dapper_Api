@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4" style="color: red;">İlan Listesi</h6> <!-- Başlık kırmızı -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="color: red;">#</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">İlan Başlığı</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Şehir</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">İlçe</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Kategori</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Fiyat</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Tür</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Sil</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Güncelle</th> <!-- Başlık kırmızı -->
                                <th scope="col" style="color: red;">Sitede Gör</th> <!-- Başlık kırmızı -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row" style="color: darkblue;">@item.productID</th> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.title</td> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.city</td> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.district</td> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.categoryName</td> <!-- İçerik lacivert -->
                                    <td style="color: darkblue;">@item.price</td> <!-- İçerik lacivert -->

                                    <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
