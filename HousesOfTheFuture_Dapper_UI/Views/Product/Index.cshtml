@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4" style="color: red;">İlan Listesi</h6> 
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="color: red;">#</th> 
                                <th scope="col" style="color: red;">İlan Başlığı</th> 
                                <th scope="col" style="color: red;">Şehir</th> 
                                <th scope="col" style="color: red;">İlçe</th> 
                                <th scope="col" style="color: red;">Kategori</th> 
                                <th scope="col" style="color: red;">Fiyat</th> 
                               @*  <th scope="col" style="color: red;">Tür</th> *@ 
                                <th scope="col" style="color: red;">Sil</th> 
                                <th scope="col" style="color: red;">Güncelle</th> 
                                <th scope="col" style="color: red;">Sitede Gör</th> 
                                <th scope="col" style="color: red;">Günün Fırsatı</th> 
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row" style="color: darkblue;">@count</th> 
                                    <td style="color: darkblue;">@item.title</td> 
                                    <td style="color: darkblue;">@item.city</td> 
                                    <td style="color: darkblue;">@item.district</td> 
                                    <td style="color: darkblue;">@item.categoryName</td> 
                                    <td style="color: darkblue;">@item.price</td> 

                                    <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>
                                    <td>
                                        @if(item.dealOfTheDay == true)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@item.productID" class="btn btn-outline-secondary">Pasif Yap</a>
                                        }
                                        @if (item.dealOfTheDay == false)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@item.productID" class="btn btn-outline-warning">Aktif Yap</a>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
