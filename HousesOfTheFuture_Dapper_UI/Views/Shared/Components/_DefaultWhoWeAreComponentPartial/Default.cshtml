<section class="w3l-index3" id="about">
    <div class="midd-w3 pb-4">
        <div class="container pb-lg-4 pb-md-3 pb-2">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <!-- Kolonu ortalamak için text-center eklendi -->
                    <div class="w3l-right-info">
                        <h6 class="title-small" style="font-size: 18px;">@ViewBag.title</h6>
                        <h3 class="title-big" style="font-size: 30px;">@ViewBag.subTitle</h3>
                        <p class="mt-3" style="font-size: 14px;">
                            @ViewBag.description1
                        </p>
                        <p class="mt-2" style="font-size: 14px;">
                            @ViewBag.description2
                        </p>
                        <ul class="w3l-right-book w3l-right-book-grid mt-md-4 mt-3">
                            @foreach (var item in Model)
                            {
                                <li><span class="fa fa-check" aria-hidden="true"></span>@item.ServiceName</li>
                            }
                        </ul>
                        <a href="#services" class="btn btn-style btn-primary mt-3">Hizmetlerimizi Keşfedin</a> <!-- Türkçeleştirildi -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
